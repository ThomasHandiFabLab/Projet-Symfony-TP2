{% extends 'base.html.twig' %}

{% block title %}Nos événements - {{ parent() }}{% endblock %}

{% block body %}

<div class="text-center counter">
    Il y a {{ incomingCounter }} événements à venir
</div>

<div class="container-fluid text-center">
    <div class="row">
        <div class="col-4">
            <a type="button" class="btn btn-outline-success" href="{{ path('produit_list') }}?criteria=price">Par dates les plus récentes</a>
        </div>
        <div class="col-4">
            <a type="button" class="btn btn-outline-warning" href="{{ path('produit_list') }}?criteria=price">Par prix croissant</a>
        </div>
        <div class="col-4">
            <a type="button" class="btn btn-outline-danger"  href="{{ path('produit_list') }}?criteria=capacity">Par capacité d'hébergement</a>
        </div>
    </div>
</div>

<div class="produits">

    {% for produit in produits %}
        <div class="card produit">
            <div class="card-body">
                <h5 class="card-title">{{ produit.name }}</h5>
                <div class="produit-info">
                    <span>
                        <i class="fas fa-euro-sign"></i>
                        {{ (produit.price ) ? produit.price : 'Gratuit' }}
                    </span>
                </div>
                <p class="card-text">{{ produit.description|slice(0,140) }}...</p>
                <a href="{{ path( 'produit_show', { id: produit.id } ) }}" class="btn btn-primary">En savoir plus</a>
            </div>
        </div>

    {% endfor %}

</div>

{% endblock %}